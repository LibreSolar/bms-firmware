/dts-v1/;

#include <st/l4/stm32l452Xc.dtsi>
#include <st/l4/stm32l452c(c-e)ux-pinctrl.dtsi>

/ {
	model = "Libre Solar BMS 8S50 IC";
	compatible = "st,stm32l452";

	pcb {
		compatible = "bms";

		type = "BMS 8S50 IC";

		/*
		 * Additional information:
		 * - Has MOSFET temperature sensor
		 * - PIN_V_EXT     PA_5
		 * - PIN_TEMP_1    PA_6
		 * - PIN_TEMP_2    PA_7
		 */
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		thingset,can = &can1;
		thingset,eeprom = &eeprom0;
		thingset,serial = &uext_uart;
	};

	leds {
		compatible = "gpio-leds";
		led1: led_0 {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
		};
		led2: led_1 {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		power_button: button {
			gpios = <&gpioa 8 GPIO_ACTIVE_LOW>;
		};
	};

	transceiver0: can-phy0 {
		compatible = "ti,tcan334", "can-transceiver-gpio";
		max-bitrate = <1000000>;
		standby-gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
		#phy-cells = <0>;
	};

	aliases {
		led-red = &led1;
		led-green = &led2;
		sw-pwr = &power_button;
		bms-ic = &isl94202;
	};
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <20>;
	div-p = <7>;
	div-q = <2>;
	div-r = <4>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(80)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart1_rx_pa10 {
	bias-pull-up;	// avoid junk characters if pin is left floating
};

uext_uart: &usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart2_rx_pa3 {
	bias-pull-up;	// avoid junk characters if pin is left floating
};

uext_i2c: &i2c1 {
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";

	isl94202: isl94202@28 {
		compatible = "renesas,isl94202";
		reg = <0x28>;	/* 0x50 >> 1 */
		pull-up-gpios = <&gpiob 2 GPIO_ACTIVE_HIGH>;
		board-max-current = <50>;
		used-cell-channels = <0xFF>;
		status = "okay";
	};

	eeprom0: eeprom@50 {
		// Microchip 24AA32A
		compatible = "atmel,at24";
		reg = <0x50>;
		size = <32768>;
		pagesize = <32>;
		address-width = <16>;
		/*
		 * timeout of 5 ms as suggested in datasheet seems too optimistic
		 * (several write errors occured during testing)
		 */
		timeout = <7>;
	};
};

&spi1 {
	pinctrl-0 = <&spi1_sck_pb3 &spi1_miso_pb4 &spi1_mosi_pb5>;
	pinctrl-names = "default";
	cs-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&can1 {
	pinctrl-0 = <&can1_rx_pb8 &can1_tx_pb9>;
	pinctrl-names = "default";
	bus-speed = <500000>;
	phys = <&transceiver0>;
	status = "okay";
};

&rng {
	status = "okay";
};

&rtc {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/*
		 * Reserve the final 16 KiB for file system partition
		 */
		storage_partition: partition@3c000 {
			label = "storage";
			reg = <0x0003c000 0x00004000>;
		};
	};
};
